# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_strong_password_here
POSTGRES_DB=calsync
DATABASE_URL=postgresql://postgres:your_strong_password_here@localhost:5433/calsync

# Google OAuth (Web Application)
# Get these from Google Cloud Console: https://console.cloud.google.com/apis/credentials
OAUTH_CLIENT_ID=your_oauth_client_id_here
OAUTH_CLIENT_SECRET=your_oauth_client_secret_here

# Google reCAPTCHA v3
# Get these from Google reCAPTCHA Admin: https://www.google.com/recaptcha/admin
# Create a reCAPTCHA v3 site key for your domain
RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here
# Minimum score threshold for reCAPTCHA v3 (0.0 to 1.0, default: 0.5)
# Lower scores indicate bot-like behavior. Recommended: 0.5 for balanced security
RECAPTCHA_MIN_SCORE=0.5

# Security Keys (MUST be generated)
# Generate JWT_SECRET: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
# Generate ENCRYPTION_KEY: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# API URLs
API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3033

# Environment
ENVIRONMENT=development
# DEBUG: Set to 'true' only in development. MUST be 'false' in production for security.
# Production deployment will force DEBUG=false regardless of this setting.
DEBUG=false

# Sync settings (optional, defaults in config.py)
SYNC_LOOKAHEAD_DAYS=90
